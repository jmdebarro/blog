---
layout: base.njk
title: My Rad Blog
templateEngineOverride: njk
---

<header class="site-header">
  <h1>DeBarro</h1>
</header>

<main class="posts-wrapper">
  <div class="posts-grid">
    {% for post in collections.posts | reverse %}
      <article class="post-card">
        {% if post.data.image %}
          <img src="{{ post.data.image }}" alt="{{ post.data.title }}" class="post-image">
        {% else %}
          <div class="post-image">GIF / Image Placeholder</div>
        {% endif %}
        <h2><a href="{{ post.url }}">{{ post.data.title }}</a></h2>
      </article>
    {% endfor %}
  </div>
</main>


<style>
  /* Header */
  .site-header {
    text-align: center;
    background-color: #565c70;
    padding: 3rem 1rem;
    margin-bottom: 2rem;
  }

  .site-header h1 {
    margin: 0;
    font-size: 3rem;
    color: #333;
  }

  /* Wrapper to center the grid and restrict width */
  .posts-wrapper {
    display: flex;
    justify-content: center; /* center the grid */
  }

  /* Grid with 3 columns */
  .posts-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr); /* exactly 3 columns per row */
    gap: 2rem;
    width: 60vw; /* 3/5 of viewport width */
  }

  /* Individual post cards */
  .post-card {
    border: 1px solid #ddd;
    border-radius: 8px;
    padding: 1rem;
    text-align: center;
    background-color: #f9f9f9;
    transition: transform 0.2s, box-shadow 0.2s;
  }

  .post-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 8px 16px rgba(0,0,0,0.1);
  }

.post-image {
  background-color: #eee;
  height: 150px;
  margin-bottom: 1rem;
  border-radius: 4px;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #888;
  font-size: 0.9rem;
  object-fit: cover;
}

.post-card img.post-image {
  width: 100%;
  height: 150px;
  object-fit: cover;
  border-radius: 4px;
}

  .post-card h2 {
    margin: 0;
    font-size: 1.2rem;
  }

  .post-card a {
    color: #0066cc;
    text-decoration: none;
  }

  .post-card a:hover {
    text-decoration: underline;
  }

  /* Responsive: collapse to 2/1 column on smaller screens */
  @media (max-width: 900px) {
    .posts-grid {
      grid-template-columns: repeat(2, 1fr);
      width: 80vw;
    }
  }

  @media (max-width: 600px) {
    .posts-grid {
      grid-template-columns: 1fr;
      width: 90vw;
    }
  }
</style>
