---
layout: base.njk
title: Jonathan DeBarro's Blog
templateEngineOverride: njk
---

<header class="site-header">
  <h1>Jonathan DeBarro</h1>
  <p class="tagline">Need money FAST!</p>
  <nav>
    <a href="https://www.linkedin.com/in/jonathanmd/">LinkedIn</a>
    <a href="https://github.com/jmdebarro">GitHub</a>
  </nav>
</header>

<!-- Divider bar under header -->
<div class="header-divider"></div>

<main class="posts-wrapper">
  <div class="posts-grid">
    {% for post in collections.posts | reverse %}
      <article class="post-card">
        {% if post.data.image %}
          <img src="{{ post.data.image }}" alt="{{ post.data.title }}" class="post-image">
        {% else %}
          <div class="post-image">GIF / Image Placeholder</div>
        {% endif %}
        <h2><a href="{{ post.url }}">{{ post.data.title }}</a></h2>
      </article>
    {% endfor %}
  </div>
</main>

<style>
/* Header */
.site-header {
  text-align: center;
  padding: 2rem 1rem; /* reduced from 3rem to 2rem to shrink space above the bar */
  border-bottom-left-radius: 20px;
  border-bottom-right-radius: 20px;
}

.site-header h1 {
  margin: 0.5rem 0;
  font-size: 3rem;
  color: #000; /* black title */
}

.site-header nav a {
  margin: 0 1rem;
  color: #1da1f2; /* light blue links */
  text-decoration: none;
  font-weight: 500;
}

.site-header nav a:hover {
  text-decoration: underline;
}

.site-header .tagline {
  margin-top: 0.5rem;
  font-style: normal; /* remove italic */
  color: #000; /* black tagline */
}

/* Divider under header */
.header-divider {
  width: 80%;
  margin: 0 auto;
  height: 4px;
  background-color: #8b8a8a; /* subtle gray divider */
  margin-bottom: 3rem;
  border-radius: 2px;
}

/* Wrapper to center the grid */
.posts-wrapper {
  display: flex;
  justify-content: center;
}

/* Grid with 3 columns, wider cards */
.posts-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 2.5rem;
  width: 80vw; /* 4/5 of viewport width */
}

/* Individual post cards */
.post-card {
  border: 1px solid #ddd;
  border-radius: 12px;
  padding: 1.5rem;
  text-align: center;
  background-color: #ffffff;
  transition: transform 0.2s, box-shadow 0.2s;
}

.post-card:hover {
  transform: translateY(-6px);
  box-shadow: 0 12px 20px rgba(0,0,0,0.1);
}

/* Post image box */
.post-image {
  background-color: #f0f0f0;
  height: 250px; /* taller */
  margin-bottom: 1.5rem;
  border-radius: 10px;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #aaa;
  font-size: 0.95rem;
  object-fit: cover;
}

.post-card img.post-image {
  width: 100%;
  height: 250px;
  object-fit: cover;
  border-radius: 10px;
}

.post-card h2 {
  margin: 0;
  font-size: 1.3rem;
  color: #333;
}

.post-card a {
  color: #337ab7;
  text-decoration: none;
}

.post-card a:hover {
  text-decoration: underline;
}

/* Responsive: collapse to 2/1 column on smaller screens */
@media (max-width: 1100px) {
  .posts-grid {
    grid-template-columns: repeat(2, 1fr);
    width: 90vw;
  }
}

@media (max-width: 700px) {
  .posts-grid {
    grid-template-columns: 1fr;
    width: 95vw;
  }
}
</style>
